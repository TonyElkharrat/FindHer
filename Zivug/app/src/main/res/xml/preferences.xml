<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="User Account">

        <EditTextPreference
            android:key="checkbox_preference"
            android:title="Change Password "
            android:summary="We will send you a mail for reset your password"
            />

        <EditTextPreference
            android:key="edittext_preference"
            android:title="Remove Account"
            android:summary="Delete Your Account definitively"
             />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="User Settings">

        <ListPreference
            android:key="list_preference"
            android:title="Remove user picture profil"
            android:summary="Click for remove your profil picture"
            />

        <Preference
            android:title="Visit our website www.Zivug.com ">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://google.com/" />
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>