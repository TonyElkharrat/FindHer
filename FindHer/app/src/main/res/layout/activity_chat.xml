<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <!-- BUTTONS CHAT CONTAINER -->
    <LinearLayout
        android:id="@+id/chat_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- BUTTON CHAT ANDROID -->
        <ImageButton
            android:id="@+id/chat_android_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:src="@drawable/fui_ic_facebook_white_22dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:tag="10"/>

        <!-- BUTTON CHAT FIREBASE -->
        <ImageButton
            android:id="@+id/chat_firebase_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/colorSandLight"
            android:src="@drawable/fui_ic_facebook_white_22dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:tag="20"/>

        <!-- BUTTON CHAT BUG -->
        <ImageButton
            android:id="@+id/chat_bug_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@color/colorSand"
            android:src="@drawable/fui_ic_twitter_bird_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:tag="30"/>

    </LinearLayout>


    <!-- RECYCLER VIEW CONTAINER -->
    <LinearLayout
        android:id="@+id/activity_mentor_chat_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_below="@id/chat_buttons_container"
        >

        <!-- MESSAGE RECYCLER VIEW EMPTY -->
        <TextView
            android:id="@+id/activity_mentor_chat_text_view_recycler_view_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:layout_margin="@dimen/default_large_margin"/>

        <!-- RECYCLER VIEW -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_mentor_chat_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />

    </LinearLayout>

    <!-- IMAGE CHOSEN PREVIEW -->
    <ImageView
        android:id="@+id/chat_image_chosen_preview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:layout_above="@id/chat_add_message_container"/>

    <!-- ADD MESSAGE CONTAINER -->

    <LinearLayout
        android:id="@+id/chat_add_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_mentor_chat_recycler_view_container"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_message_input"
        >

        <!-- ADD FILE BUTTON -->
        <ImageButton
            android:id="@+id/chat_add_file_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_attachments"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <!-- TEXT MESSAGE EDIT TEXT -->
        <EditText
            android:id="@+id/chat_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:hint="Message..."
            android:textColorHint="@color/grey"
            android:background="@null"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            />

        <!-- ADD MESSAGE BUTTON -->
        <Button
            android:id="@+id/chat_send_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/blueDark"
            android:fontFamily="@font/aaaaa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="Send"
            android:textAllCaps="false"
            android:background="?android:selectableItemBackgroundBorderless"
            />

    </LinearLayout>
</RelativeLayout>
